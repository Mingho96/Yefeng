<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loan_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/tv_top"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:text="1"
          android:textColor="#f00"
          android:layout_gravity="center"
          android:textSize="26sp"
          android:gravity="center"/>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="80dp"
          android:layout_weight="1"
          android:paddingLeft="20dp"
          android:orientation="vertical">
          <TextView
              android:id="@+id/game_top_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:textSize="16sp"
              android:layout_marginTop="15dp"
              android:text="@string/game_name"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <RatingBar
                  android:id="@+id/game_top_rate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:numStars="5"
                  android:stepSize="0.5"
                  android:rating="3.5"
                  android:layout_gravity="center"
                  android:progressTint="@color/orange"
                  style="@style/Base.Widget.AppCompat.RatingBar.Small" />
              <View
                  android:layout_width="1dp"
                  android:layout_height="10dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="7dp"
                  android:background="#eee" />
              <TextView
                  android:id="@+id/game_top_type"
                  android:layout_width="wrap_content"
                  android:textSize="8sp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorAccent"
                  android:layout_marginLeft="7dp"
                  android:text="@string/game_type"
                  android:layout_gravity="center"
                  android:layout_marginStart="7dp" />
              <View
                  android:layout_width="1dp"
                  android:layout_height="10dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="7dp"
                  android:background="#eee" />
              <TextView
                  android:id="@+id/game_top_size"
                  android:layout_width="wrap_content"
                  android:textSize="8sp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorAccent"
                  android:layout_marginLeft="7dp"
                  android:text="119.5m"
                  android:layout_gravity="center"
                  android:layout_marginStart="7dp" />
          </LinearLayout>
          <TextView
              android:id="@+id/game_top_description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="30dp"
              android:layout_marginTop="5dp"
              android:textSize="10sp"
              android:lines="1"
              android:ellipsize="end"
              android:text="@string/game_description"/>
      </LinearLayout>
      <TextView
          android:id="@+id/go_top_loan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:text="@string/goto_download"
          android:padding="10dp"
          android:textSize="10sp"
          android:textColor="#fff"
          android:background="@drawable/button_shape"/>
  </LinearLayout>
</LinearLayout>
